<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/bg_avt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_user_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/avatar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/name_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="HT"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàng Tiến"
            android:textColor="#7d7d7d"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#7d7d7d"
            android:id="@+id/txt_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="20/11/1994" />

        <TextView
            android:textColor="#7d7d7d"
            android:id="@+id/txt_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_birthdate"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="170 cm" />

        <TextView
            android:textColor="#7d7d7d"
            android:id="@+id/txt_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_height"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="65 kg" />

        <TextView
            android:id="@+id/txt_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_weight"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Sở thích"
            android:textColor="#7d7d7d" />

        <TextView
            android:id="@+id/txt_dislike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_like"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Sở ghét"
            android:textColor="#7d7d7d" />

        <TextView
            android:id="@+id/txt_sickhistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_dislike"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Lịch sử bệnh"
            android:textColor="#7d7d7d" />
    </RelativeLayout>
</LinearLayout>